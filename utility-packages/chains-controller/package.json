{
  "name": "@xdefi/chains-controller",
  "version": "0.0.0",
  "private": true,
  "license": "MIT",
  "main": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "build": "tsup --minify --clean",
    "watch": "tsup --watch",
    "compile": "graphql-codegen --config codegen.yml && yarn format",
    "compile:build": "yarn compile && yarn build",
    "compile:watch": "graphql-codegen -w",
    "format": "prettier --write \"**/*.{ts,tsx,md}\""
  },
  "devDependencies": {
    "prettier": "^2.5.1",
    "typescript": "^5.0.2"
  },
  "dependencies": {
    "@xdefi/chains-core": "*",
    "@xdefi/graphql": "*",
    "rimraf": "^4.4.0"
  },
  "tsup": {
    "entry": [
      "src/index.ts"
    ],
    "outDir": "dist",
    "format": "esm",
    "splitting": false,
    "dts": true,
    "types": [
      "./dist/index.d.ts"
    ],
    "platform": "browser"
  }
}