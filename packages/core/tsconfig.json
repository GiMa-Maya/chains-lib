{
  "extends": "tsconfig/base.json",
  "compilerOptions": {
    "rootDir": "./src/",
    "outDir": "./dist/",
    "baseUrl": ".",
    "paths": {
      "*": [
        "./src/*"
      ]
    }
  },
  "include": [
    "./src/**/*"
  ],
  "exclude": [
    "src/**/*.spec.ts",
    "src/**/*.test.ts",
    "dist",
    "node_modules"
  ]
}
