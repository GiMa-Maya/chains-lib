{
  "name": "@xdefi-tech/chains-binance",
  "version": "2.0.3",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "repository": "https://github.com/XDeFi-tech/chains/",
  "license": "MIT",
  "files": [
    "dist",
    "CHANGELOG.md",
    "README.md"
  ],
  "exports": {
    "./web": {
      "require": "./dist/signers/web.js",
      "import": "./dist/signers/web.js",
      "types": "./dist/signers/web.d.ts"
    },
    "./react-native": {
      "require": "./dist/signers/react-native.js",
      "import": "./dist/signers/react-native.js",
      "types": "./dist/signers/react-native.d.ts"
    },
    ".": {
      "require": "./dist/index.js",
      "import": "./dist/index.js"
    }
  },
  "devDependencies": {
    "eslint-config-custom": "*",
    "jest": "27.5.1",
    "jest-environment-jsdom": "27.5.1",
    "jest-watch-typeahead": "1.0.0",
    "ts-jest": "27.1.4",
    "tsup": "6.6.3",
    "typescript": "4.6.3"
  },
  "dependencies": {
    "@binance-chain/javascript-sdk": "4.2.1",
    "@xdefi-tech/chains-core": "*",
    "@xdefi-tech/chains-graphql": "*",
    "axios": "1.4.0",
    "bignumber.js": "9.1.2",
    "reflect-metadata": "0.1.13",
    "rimraf": "4.4.0",
    "rxjs": "7.8.0",
    "ts-node": "10.7.0"
  },
  "scripts": {
    "build": "tsup --minify --clean",
    "publish:packages": "npm publish --tag $GITHUB_REF",
    "watch": "tsup --watch",
    "coverage": "jest --coverageReporters='json-summary' --coverage",
    "test": "jest",
    "test:watch": "jest --watch",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "clean": "rimraf dist .turbo node_modules"
  },
  "type": "commonjs",
  "tsup": {
    "entry": [
      "src/**/*.ts",
      "!src/**/*.spec.*",
      "!src/custom.d.ts"
    ],
    "format": "cjs",
    "splitting": false,
    "dts": true,
    "types": [
      "./dist/index.d.ts",
      "./dist/signers/web.d.ts",
      "./dist/signers/react-native.d.ts"
    ],
    "platform": "browser",
    "targer": "ES6",
    "external": [
      "@binance-chain/javascript-sdk"
    ]
  },
  "jest": {
    "setupFiles": [],
    "preset": "ts-jest/presets/js-with-ts",
    "transform": {
      ".+\\.(t|j)s$": "ts-jest"
    },
    "modulePathIgnorePatterns": [
      "<rootDir>/dist/"
    ],
    "watchPlugins": [
      "jest-watch-typeahead/filename",
      "jest-watch-typeahead/testname"
    ],
    "testEnvironment": "jsdom",
    "moduleNameMapper": {
      "axios": "axios/dist/node/axios.cjs"
    },
    "testTimeout": 15000
  }
}
