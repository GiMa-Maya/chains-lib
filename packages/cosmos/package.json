{
  "name": "@xdefi/chains-cosmos",
  "version": "1.0.0",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "license": "MIT",
  "devDependencies": {
    "eslint-config-custom": "*",
    "jest": "^27.5.1",
    "jest-environment-jsdom": "^27.5.1",
    "jest-watch-typeahead": "^1.0.0",
    "ts-jest": "^27.1.4",
    "tsup": "^6.6.3",
    "typescript": "^4.6.3"
  },
  "dependencies": {
    "@cosmjs/amino": "^0.30.1",
    "@cosmjs/encoding": "^0.30.1",
    "@cosmjs/launchpad": "^0.27.1",
    "@cosmjs/ledger-amino": "^0.30.1",
    "@cosmjs/proto-signing": "^0.30.1",
    "@cosmjs/stargate": "^0.30.1",
    "@xdefi/chains-core": "*",
    "@xdefi/graphql": "*",
    "bech32": "^2.0.0",
    "bignumber.js": "^9.0.2",
    "crypto-browserify": "^3.12.0",
    "reflect-metadata": "^0.1.13",
    "rimraf": "^4.4.0",
    "rxjs": "^7.8.0",
    "stream-browserify": "^3.0.0",
    "ts-node": "^10.7.0"
  },
  "scripts": {
    "build": "webpack --config webpack.prod.cjs",
    "watch": "webpack --config webpack.dev.cjs",
    "clean": "rimraf dist .turbo node_modules",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "test": "jest"
  },
  "type": "commonjs",
  "tsup": {
    "entry": [
      "src/index.ts",
      "src/signers/web.ts",
      "src/signers/react-native.ts"
