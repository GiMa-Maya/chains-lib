{
  "name": "@xdefi-tech/chains-cosmos",
  "version": "1.2.1",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "license": "MIT",
  "type": "commonjs",
  "exports": {
    "./web": {
      "require": "./dist/signers/web.js",
      "import": "./dist/signers/web.js",
      "types": "./dist/signers/web.d.ts"
    },
    "./react-native": {
      "require": "./dist/signers/react-native.js",
      "import": "./dist/signers/react-native.js",
      "types": "./dist/signers/react-native.d.ts"
    },
    ".": {
      "require": "./dist/index.js",
      "import": "./dist/index.js"
    }
  },
  "files": [
    "dist",
    "CHANGELOG.md",
    "README.md"
  ],
  "devDependencies": {
    "@esbuild-plugins/node-modules-polyfill": "^0.2.2",
    "eslint-config-custom": "*",
    "jest": "^27.5.1",
    "jest-environment-jsdom": "^27.5.1",
    "jest-watch-typeahead": "^1.0.0",
    "ts-jest": "^27.1.4",
    "tsup": "^6.6.3",
    "typescript": "^4.6.3"
  },
  "dependencies": {
    "@cosmjs/amino": "^0.30.1",
    "@cosmjs/encoding": "^0.30.1",
    "@cosmjs/launchpad": "^0.27.1",
    "@cosmjs/ledger-amino": "^0.30.1",
    "@cosmjs/proto-signing": "^0.32.2",
    "@cosmjs/stargate": "^0.32.2",
    "@cosmjs/tendermint-rpc": "^0.32.2",
    "@cosmos-client/core": "^0.47.1",
    "@terra-money/feather.js": "^2.0.0-beta.13",
    "@xdefi-tech/chains-core": "*",
    "@xdefi-tech/chains-graphql": "*",
    "axios": "^1.4.0",
    "bech32": "^2.0.0",
    "bech32-buffer": "^0.2.1",
    "bignumber.js": "^9.0.2",
    "crypto-browserify": "^3.12.0",
    "ethers": "^5.6.4",
    "lodash": "^4.17.21",
    "os-browserify": "^0.3.0",
    "osmojs": "^16.5.1",
    "reflect-metadata": "^0.1.13",
    "rimraf": "^4.4.0",
    "rxjs": "^7.8.0",
    "stream-browserify": "^3.0.0",
    "ts-node": "^10.7.0"
  },
  "peerDependencies": {
    "@terra-money/terra.proto": "4.0.4"
  },
  "scripts": {
    "build": "tsup --minify --clean",
    "watch": "tsup --watch",
    "clean": "rimraf dist .turbo node_modules",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "coverage": "jest --coverageReporters='json-summary' --coverage",
    "test": "jest",
    "test:watch": "jest --watch"
  },
  "jest": {
    "setupFiles": [],
    "preset": "ts-jest",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "modulePathIgnorePatterns": [
      "<rootDir>/dist/"
    ],
    "testURL": "https://rpc-proxy.xdefi.services/",
    "moduleNameMapper": {
      "axios": "axios/dist/node/axios.cjs"
    },
    "testEnvironment": "node",
    "watchPlugins": [
      "jest-watch-typeahead/filename",
      "jest-watch-typeahead/testname"
    ],
    "testTimeout": 15000
  }
}
