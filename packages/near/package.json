{
  "name": "@xdefi-tech/chains-near",
  "version": "1.0.5",
  "main": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "repository": "https://github.com/XDeFi-tech/chains/",
  "license": "MIT",
  "files": [
    "dist",
    "CHANGELOG.md",
    "README.md"
  ],
  "exports": {
    "./web": {
      "require": "./dist/signers/web.js",
      "import": "./dist/signers/web.mjs",
      "types": "./dist/signers/web.d.ts"
    },
    "./react-native": {
      "require": "./dist/signers/react-native.js",
      "import": "./dist/signers/react-native.mjs",
      "types": "./dist/signers/react-native.d.ts"
    },
    ".": {
      "require": "./dist/index.js",
      "import": "./dist/index.mjs"
    }
  },
  "devDependencies": {
    "eslint-config-custom": "*",
    "jest": "^27.5.1",
    "jest-environment-jsdom": "^27.5.1",
    "jest-watch-typeahead": "^1.0.0",
    "ts-jest": "^27.1.4",
    "tsup": "^6.6.3",
    "typescript": "^4.6.3"
  },
  "dependencies": {
    "@xdefi-tech/chains-core": "*",
    "@xdefi-tech/chains-graphql": "*",
    "bignumber.js": "^9.0.2",
    "bn.js": "^5.2.1",
    "near-api-js": "^2.1.1",
    "reflect-metadata": "^0.1.13",
    "rimraf": "^4.4.0",
    "rxjs": "^7.8.0",
    "ts-node": "^10.7.0"
  },
  "scripts": {
    "build": "tsup --minify --clean",
    "publish:packages": "npm publish --tag $GITHUB_REF",
    "watch": "tsup --watch",
    "clean": "rimraf dist .turbo node_modules",
    "lint": "eslint .",
    "test": "jest",
    "lint:fix": "eslint . --fix",
    "test:watch": "jest --watch"
  },
  "tsup": {
    "entry": [
      "src/index.ts",
      "src/signers/web.ts",
      "src/signers/react-native.ts"
    ],
    "format": "esm",
    "splitting": false,
    "dts": true,
    "types": [
      "./dist/index.d.ts",
      "./dist/signers/web.d.ts",
      "./dist/signers/react-native.d.ts"
    ],
    "platform": "browser",
    "external": [
      "near-api-js",
      "bn.js",
      "borsh"
    ]
  }
}
