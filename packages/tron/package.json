{
  "name": "@xdefi-tech/chains-tron",
  "version": "2.0.0",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "repository": "https://github.com/XDeFi-tech/chains/",
  "license": "MIT",
  "files": [
    "dist",
    "CHANGELOG.md",
    "README.md"
  ],
  "exports": {
    "./web": {
      "require": "./dist/signers/web.js",
      "import": "./dist/signers/web.js",
      "types": "./dist/signers/web.d.ts"
    },
    "./react-native": {
      "require": "./dist/signers/react-native.js",
      "import": "./dist/signers/react-native.js",
      "types": "./dist/signers/react-native.d.ts"
    },
    ".": {
      "require": "./dist/index.js",
      "import": "./dist/index.js"
    }
  },
  "devDependencies": {
    "jest": "^27.5.1",
    "jest-environment-jsdom": "^27.5.1",
    "jest-watch-typeahead": "^1.0.0",
    "ts-jest": "^27.1.4",
    "tsup": "^6.6.3",
    "typescript": "^4.6.3"
  },
  "dependencies": {
    "@agrozyme/types-tronweb": "^5.3.2",
    "@ledgerhq/hw-app-trx": "^6.28.1",
    "@ledgerhq/hw-transport-webhid": "^6.28.1",
    "@xdefi-tech/chains-core": "*",
    "axios": "^1.6.1",
    "bignumber.js": "^9.0.2",
    "eslint-config-custom": "*",
    "ethers": "^6.9.0",
    "lodash": "^4.17.21",
    "reflect-metadata": "^0.1.13",
    "rimraf": "^4.4.0",
    "rxjs": "^7.8.0",
    "tronweb": "^5.3.1",
    "ts-node": "^10.7.0"
  },
  "scripts": {
    "build": "tsup --minify --clean",
    "publish:packages": "npm publish --tag $GITHUB_REF",
    "watch": "tsup --watch",
    "clean": "rimraf dist .turbo node_modules",
    "lint": "eslint .",
    "test": "jest",
    "lint:fix": "eslint . --fix",
    "test:watch": "jest --watch",
    "coverage": "jest --coverageReporters='json-summary' --coverage"
  },
  "type": "commonjs",
  "tsup": {
    "entry": [
      "src/**/*.ts",
      "!src/**/*.spec.*",
      "!src/tronweb.d.ts"
    ],
    "format": "cjs",
    "splitting": false,
    "dts": true,
    "platform": "browser",
    "target": "ES6"
  },
  "jest": {
    "setupFiles": [],
    "preset": "ts-jest",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "moduleNameMapper": {
      "axios": "axios/dist/node/axios.cjs"
    },
    "modulePathIgnorePatterns": [
      "<rootDir>/dist/"
    ],
    "watchPlugins": [
      "jest-watch-typeahead/filename",
      "jest-watch-typeahead/testname"
    ],
    "testTimeout": 15000
  }
}
